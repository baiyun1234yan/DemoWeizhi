<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_choose_snap_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SnapPay项目" />

    <Button
        android:id="@+id/btn_choose_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取经纬度" />

    <Button
        android:id="@+id/btn_choose_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取ip地址" />

    <Button
        android:id="@+id/btn_choose_java"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试" />

    <Button
        android:id="@+id/btn_choose_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="view测试" />

    <Button
        android:id="@+id/btn_choose_assets_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开assets文件" />

    <Button
        android:id="@+id/btn_choose_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取时间" />

    <Button
        android:id="@+id/btn_choose_rxjava"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RxJava" />

    <Button
        android:id="@+id/btn_choose_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="网络请求" />

</LinearLayout>  